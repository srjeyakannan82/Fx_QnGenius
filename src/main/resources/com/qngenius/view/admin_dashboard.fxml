<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="container" alignment="TOP_CENTER" spacing="20.0" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qngenius.controller.AdminController">

    <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 20px;">
        <Label fx:id="usernameLabel" styleClass="label" text="Welcome, Admin" />
        <Button text="Logout" onAction="#handleLogoutButtonAction" styleClass="link-button" />
    </HBox>

    <TabPane styleClass="tab-pane" side="TOP" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Academic Data Management">
                <content>
                    <VBox fx:id="academicDataManagementTab" spacing="10.0" style="-fx-padding: 20px;">
                        <Label text="Manage Courses" styleClass="subtitle" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <TextField fx:id="courseCodeField" promptText="Course Code (e.g., MBA)" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <TextField fx:id="courseNameField" promptText="Course Name" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <Button text="Add Course" onAction="#handleAddCourse" styleClass="button" />
                        </HBox>
                        <TableView fx:id="coursesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="courseCodeColumn" text="Code" prefWidth="150" />
                                <TableColumn fx:id="courseNameColumn" text="Name" prefWidth="300" />
                            </columns>
                        </TableView>

                        <Label text="Manage Subjects" styleClass="subtitle" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <ComboBox fx:id="courseSelectForSubject" promptText="Select Course" styleClass="combo-box" prefWidth="150" />
                            <TextField fx:id="subjectCodeField" promptText="Subject Code" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <TextField fx:id="subjectNameField" promptText="Subject Name" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <Button text="Add Subject" onAction="#handleAddSubject" styleClass="button" />
                        </HBox>
                        <TableView fx:id="subjectsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="subjectCodeColumn" text="Code" prefWidth="150" />
                                <TableColumn fx:id="subjectNameColumn" text="Name" prefWidth="300" />
                            </columns>
                        </TableView>

                        <Label text="Manage Units" styleClass="subtitle" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <ComboBox fx:id="subjectSelectForUnit" promptText="Select Subject" styleClass="combo-box" prefWidth="150" />
                            <TextField fx:id="unitNameField" promptText="Unit Name" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <Button text="Add Unit" onAction="#handleAddUnit" styleClass="button" />
                        </HBox>
                        <TableView fx:id="unitsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="unitNameColumn" text="Name" prefWidth="450" />
                            </columns>
                        </TableView>
                        
                        <Label text="Manage Blueprints" styleClass="subtitle" />
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <ComboBox fx:id="subjectSelectForBlueprint" promptText="Select Subject" styleClass="combo-box" />
                            <ComboBox fx:id="examTypeSelectForBlueprint" promptText="Select Exam Type" styleClass="combo-box" />
                            <TextField fx:id="blueprintTitleField" promptText="Blueprint Title" styleClass="text-field" HBox.hgrow="ALWAYS" />
                            <TextField fx:id="totalMarksField" promptText="Total Marks" styleClass="text-field" />
                            <TextField fx:id="durationField" promptText="Duration (mins)" styleClass="text-field" />
                            <Button text="Add Blueprint" onAction="#handleAddBlueprint" styleClass="button" />
                        </HBox>
                        <TableView fx:id="blueprintsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="blueprintTitleColumn" text="Title" prefWidth="250" />
                                <TableColumn fx:id="blueprintTotalMarksColumn" text="Total Marks" prefWidth="100" />
                                <TableColumn fx:id="blueprintDurationColumn" text="Duration (mins)" prefWidth="120" />
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            <Tab text="User Management">
                <content>
                    <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20px;">
                        <Label text="User Management features coming soon..." styleClass="title" />
                    </VBox>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>