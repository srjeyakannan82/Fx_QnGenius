<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>

<HBox styleClass="container" alignment="TOP_CENTER" spacing="20.0" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qngenius.controller.MainAppController">
      
    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Label fx:id="usernameLabel" styleClass="label" text="Welcome, User" />
            <Button text="Logout" onAction="#handleLogoutButtonAction" styleClass="link-button" />
        </HBox>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <VBox fx:id="controlsPanel" styleClass="sidebar-panel" spacing="15.0" minWidth="300">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label styleClass="title" text="Generate Questions" />
                
                <VBox spacing="5.0">
                    <Label styleClass="label" text="Topic:" />
                    <TextField fx:id="topicField" promptText="e.g., SWOT Analysis" styleClass="text-field" />
                </VBox>
                
                <VBox spacing="5.0">
                    <Label styleClass="label" text="Question Type:" />
                    <TextField fx:id="questionTypeField" promptText="e.g., Case Study" styleClass="text-field" />
                </VBox>
                <VBox spacing="5.0">
        <Label styleClass="label" text="Question Type:" />
        <ComboBox fx:id="questionTypeComboBox" promptText="Select Type" styleClass="combo-box" maxWidth="Infinity" />
    </VBox>
    
    <VBox spacing="5.0">
        <Label styleClass="label" text="Marks:" />
        <ComboBox fx:id="marksComboBox" promptText="Select Marks" styleClass="combo-box" maxWidth="Infinity" />
    </VBox>
    
    <VBox spacing="5.0">
        <Label styleClass="label" text="Difficulty Level:" />
        <ComboBox fx:id="difficultyLevelComboBox" promptText="Select Level" styleClass="combo-box" maxWidth="Infinity" />
    </VBox>
    
    <VBox spacing="5.0">
        <Label styleClass="label" text="Bloom Taxonomy Level:" />
        <ComboBox fx:id="bloomTaxonomyComboBox" promptText="Select Level" styleClass="combo-box" maxWidth="Infinity" />
    </VBox>

                <Button fx:id="generateButton" text="Generate Questions" onAction="#handleGenerateButtonAction" maxWidth="Infinity" styleClass="button" />
            </VBox>
            
            <VBox fx:id="mainContent" styleClass="main-content-panel" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label styleClass="title" text="Generated Questions" />
                <TextArea fx:id="questionsArea" editable="false" VBox.vgrow="ALWAYS" styleClass="text-area" />
            </VBox>
        </HBox>
    </VBox>
</HBox>